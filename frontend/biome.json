{
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 80
    },
    "linter": {
      "enabled": true,
      "rules": {
        "recommended": true
      }
    },
    "javascript": {
      "formatter": {
        "quoteStyle": "single",
        "semicolons": "always"
      }
    },
    "files": {
      "include": ["components/**/*.{js,jsx,ts,tsx,css,json,mjs}", "app/**/*.{js,jsx,ts,tsx,css,json,mjs}"],
      "ignore": [".next/**", "node_modules/**", "dist/**", "build/**"]
    }
  }
