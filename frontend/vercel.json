{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "installCommand": "rm -rf node_modules package-lock.json && npm install",
  "env": {
    "SKIP_ENV_VALIDATION": "1",
    "NPM_CONFIG_AUDIT": "false",
    "NPM_CONFIG_FUND": "false"
  },
  "functions": {
    "app/api/**/*": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "PRISMA_CLI_BINARY_TARGETS": "rhel-openssl-1.0.x"
    }
  }
} 